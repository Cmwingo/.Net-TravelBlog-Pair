@{
    ViewData["Title"] = "People Detailed Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WorldTravelBlog.Models.Person

<h1>@Html.DisplayFor(model => model.Name) Details</h1>
<hr />

<h4>Description: @Html.DisplayFor(model => model.Description)</h4>

<h3>Experiences: </h3>
@foreach (var experiencePerson in ViewBag.Experiences)
{
    <p>@experiencePerson.Experience.Title At @experiencePerson.Experience.Location.Name In @experiencePerson.Experience.Location.Country</p>
}

<p>@Html.ActionLink("Back to persons list", "People")</p>